<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>planchet</object-name>
    <object-name>inttourvitres</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttour</object-name>
    <object-name>introof</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intentreverriere</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/SIAI-Marchetti-SF.260/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/SIAI-Marchetti-SF.260/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.12 </x-m>
      <y-m> -0.26 </y-m>
      <z-m> -0.33 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/SIAI-Marchetti-SF.260/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.41410 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.07155 </z-m>
    </offsets>
  </model>
  
  <!-- Pilot seat -->
  <model>
    <path>Aircraft//SIAI-Marchetti-SF.260/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -0.68 </x-m>
      <y-m> -0.26 </y-m>
      <z-m> -0.21 </z-m>
    </offsets>
  </model>
  
  <!-- Copilot seat -->
  <model>
    <path>Aircraft/SIAI-Marchetti-SF.260/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -0.68 </x-m>
      <y-m>  0.26 </y-m>
      <z-m> -0.21 </z-m>
    </offsets>
  </model>
  
  <!--
  <model>
    <path>Aircraft/SIAI-Marchetti-SF.260/Models/Interior/Panel/Instruments/Yokes/all-yokes.xml</path>
  </model>
  
  <model>
    <path>Aircraft/SIAI-Marchetti-SF.260/Models/Interior/Panel/Instruments/Pedals/all-pedals.xml</path>
  </model>
  -->
  
  <!-- Canopy -->
  <animation>
    <name>IntLaVerriere</name>
    <object-name>introof</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>intverriere</object-name>
    <object-name>intentreverriere</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaVerriere</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0 </dep></entry>
      <entry><ind> 1 </ind><dep> 1 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.04 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Séléction du type de toit -->
  <animation>
    <type>select</type>
    <object-name>introof</object-name>
    <condition>
      <!-- /sim/model/hide-typea -->
      <property>sim/multiplay/generic/int[6]</property>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>intentreverriere</object-name>
    <condition>
      <not>
        <!-- /sim/model/hide-typea -->
        <property>sim/multiplay/generic/int[6]</property>
      </not>
    </condition>
  </animation>
  
</PropertyList>
